<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <include
        android:id="@+id/toolbar"
        layout="@layout/top_bar"></include>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="179dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterSsn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your SSN"
            android:inputType="number"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your Service*"
            android:inputType="text"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter your Name Surname*"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Please enter your Phone Number*"
            android:inputType="number"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Please enter your email*"
            android:inputType="textEmailAddress"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Please enter your Password*"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/txtRegisterConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Please enter your Password again *"
            android:inputType="textPassword"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SIGN UP"
            android:background="@drawable/buttonbg"
            android:textColor="#6C79BF"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>


    </LinearLayout>


</RelativeLayout>